{
  "name": "ng-modern-boilerplate",
  "version": "1.0.0-beta",
  "description": "Seed project for frontend development with PostCSS for CSS, Babel for Javascript, Webpack for dependency management, and AngularJS with Karma+Jasmine for a development framework.",
  "main": "dist/main.js",
  "engines": {
    "node": "~8.x",
    "npm": "~5.x"
  },
  "scripts": {
    "build": "gulp build",
    "build-production": "gulp build-production",
    "clean": "gulp clean",
    "coverage-ci": "npm run test-unit && cat dist/coverage/lcov/lcov.info | node node_modules/coveralls/bin/coveralls.js",
    "develop": "gulp develop",
    "documentation": "gulp clean:docs && esdoc",
    "generate-component": "gulp generate:component",
    "generate-route": "gulp generate:route",
    "generate-directive": "gulp generate:directive",
    "generate-service": "gulp generate:service",
    "lint-css": "stylelint \"src/**/*.css\"",
    "lint-js": "eslint \"src/**/*.js\"",
    "postinstall": "npm run setup-tasks && npm run setup-protractor",
    "setup-tasks": "rollup -c tasks/rollup.config.js",
    "setup-protractor": "webdriver-manager update",
    "start": "gulp production",
    "test": "jasmine package.e2e.js",
    "test-unit": "cross-env BABEL_ENV=test gulp test",
    "test-unit-dev": "cross-env BABEL_ENV=test gulp watch:test",
    "test-integration": "protractor tasks/test/protractor.config.js",
    "test-integration-dev": "cross-env HEADLESS=1 protractor tasks/test/protractor.config.js"
  },
  "author": "Giuseppe Scoppino <scoppino.giuseppe@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "~6.26.x",
    "babel-loader": "~7.1.x",
    "babel-plugin-external-helpers": "~6.22.x",
    "babel-plugin-istanbul": "~4.1.x",
    "babel-plugin-syntax-dynamic-import": "~6.18.x",
    "babel-preset-env": "~1.7.x",
    "browser-sync": "~2.24.x",
    "coveralls": "~3.0.x",
    "critical": "~1.3.4",
    "cross-env": "~5.2.x",
    "cssnano": "~4.0.x",
    "del": "~3.0.x",
    "esdoc": "~1.1.x",
    "esdoc-standard-plugin": "~1.0.x",
    "eslint": "~5.3.x",
    "eslint-loader": "~2.1.x",
    "gulp": "~3.9.x",
    "gulp-htmlmin": "~4.0.x",
    "gulp-rename": "~1.4.x",
    "gulp-template": "~5.0.x",
    "jasmine": "~3.2.x",
    "karma": "~3.0.x",
    "karma-chrome-launcher": "~2.2.x",
    "karma-coverage": "~1.1.x",
    "karma-jasmine": "~1.1.x",
    "karma-sourcemap-loader": "~0.3.x",
    "karma-webpack": "~3.0.x",
    "postcss": "~6.0.x",
    "postcss-cssnext": "~3.1.x",
    "postcss-import": "~11.1.x",
    "postcss-reporter": "~5.0.x",
    "protractor": "~5.4.0",
    "puppeteer": "~1.4.x",
    "raw-loader": "~0.5.x",
    "rollup": "~0.64.x",
    "rollup-plugin-babel": "~3.0.x",
    "stylelint": "~9.4.x",
    "stylelint-config-standard": "~18.2.x",
    "sw-precache-webpack-plugin": "~0.11.x",
    "webpack": "~4.16.x",
    "yargs": "~12.0.x"
  },
  "dependencies": {
    "@uirouter/angularjs": "~1.0.x",
    "angular": "~1.7.x",
    "angular-aria": "~1.7.x",
    "angular-mocks": "~1.7.x",
    "babel-polyfill": "~6.26.x"
  }
}
